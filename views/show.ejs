<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui hude header"><%= blog.title %></div> 
    <div class="ui top attached segment">
        <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
                <div class="content">
                    <span><%= blog.created.toDateString()%></span>
                </div>
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
                <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
                <form id='delete' action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui basic red button">Delete</button>
                </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>